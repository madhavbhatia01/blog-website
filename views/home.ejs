<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= text %></p>
<% posts.forEach(function(post){ %>

  <h1><%= post.heading %></h1>
  <% if(post.imag){ %>
  <div class="homeall">
  <div><img class="cc alignleft" src="<%= post.imag %>" alt=""></div>
  <div class="hometext"><p><%= post.content.substring(0,200) + " ..." %> <a class="read-more" href="/posts/<%= post._id %>">Read More</a></p></div>
  </div>
  <% }else{%>
  <div><p><%= post.content.substring(0,120) + " ..." %> <a class="read-more" href="/posts/<%= post._id %>">Read More</a></p></div>
  <% } %>
<% }) %>

<%- include("partials/footer") -%>
